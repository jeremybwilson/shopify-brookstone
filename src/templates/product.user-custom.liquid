{% capture shogun_check %}
  {% include 'shogun-products', content: product %}
{% endcapture %}
{% unless shogun_check contains 'Liquid error' %}
  {{ shogun_check }}
{% endunless %}

{{product.metafields.shogun.above}}
{% if product.tags contains 'hide_from_catalog' %}
  {% include '404' %}
  <script>
    document.body.classList.remove('product')
    var content = document.getElementById('content')
    if (content) {
      content.classList.add('row')
    }
  </script>
{% else %}
  {% section 'product-template' %}
{% endif %}


{% comment %}
{{product.metafields.shogun.below}}
{% endcomment %}