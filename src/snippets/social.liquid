<div class="share-icons">
  <span class="share-text">{{ 'general.social.share' | t }}:</span>
  <a href="//www.facebook.com/sharer.php?u={{ shop.url }}{% if template == 'blog' or template == 'article' %}{{ article.url }}{% else %}{{ product.url }}{% endif %}" class="facebook" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
  <a href="//twitter.com/home?status={{ shop.url }}{% if template == 'blog' or template == 'article' %}{{ article.url }}{% else %}{{ product.url }}{% endif %} via @{{ settings.twittername }}" title="Share on Twitter" target="_blank" class="twitter"><i class="fa fa-twitter fa-2x"></i></a>
  {% if template == 'collection' or template == 'product' or template == 'index' %}
  <a target="blank" href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&amp;media={{ product.images[0] | product_img_url: '1024x1024' | prepend: 'http:' }}" title="Pin This Product" class="pintrest"><i class="fa fa-pinterest fa-2x"></i></a>
  {% endif %}

  {% if template contains 'blog' or template contains 'article' %}
  {% if article.image %}
  <a title="{{ 'social.icons.pinterest' | t }}" target="blank" href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ article.url }}&amp;media={{ article.image.src | img_url: 'grande' | prepend: 'http:' }}" title="Pin This Article" class="pinterest"><i class="fa fa-pinterest fa-2x"></i></a>
  {% endif %}
  {% endif %}
</div>
