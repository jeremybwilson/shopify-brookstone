

.fancybox-overlay {
  background: rgba(0,0,0,.9);
}


.product-details--campaign-video {
  position: relative;
  z-index: 1;
}

.product-details--video-caption {
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  width: 80%;
  max-width: 400px;
  transform: translate(-50%,-50%);
  color: $color--white;
  text-align: center;
  text-transform: uppercase;

  // Subtitle

  h3 {
    margin-bottom: 12px;
    color: inherit;
    font-weight: $font-weight--bold;
    @include fontDim(14px,.28px,.2em);

    @include mq('tablet-and-up') {
      margin-bottom: 8px;
      @include fontDim(20px,38px,.4em);
    }
  }

  // Title

  h2 {
    color: inherit;
    font-weight: $font-weight--bold;

    @include fontDim(20px,28px,.2em);

    @include mq('tablet-and-up') {
      @include fontDim(30px,41px,.25em);
    }

  }

  // Play Button

  .play-btn {
    position: relative;
    width: 100px;
    height: 100px;
    margin-top: 4px;
    background: none;
    color: $color--white;
    font-weight: $font-weight--bold;

    @include fontDim(11px,11px,.2em);

    @include mq('lap-and-up') {
      margin-top: 20px;
      @include fontDim(13px,13px,.2em);
    }    

    span {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
    }

    &:before {
      content: '';        
      position: absolute;
      top: 50%;
      left: 50%;
      z-index: -1;
      width: 61px;
      height: 61px;
      transform: translate(-50%,-50%) rotate(45deg);
      border: solid 2px $color--white;
      transition: all .25s ease-out;

      @include mq('lap-and-up') {
        width: 73px;
        height: 73px;
      }        
    }  

    &:hover {
      color: $color--primary-1;

      &:before {
        background-color: $color--white;
      }
    }

  }
}
.campaign-video--image {
  img {
    width: 100%;
    max-width: none;
  }
}
#campaign-video {
  width: 100%;
  max-width: 800px;
  padding: 0;
}

