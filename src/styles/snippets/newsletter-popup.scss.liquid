#subscribe--popup-wrapper {
  position: fixed !important;
  width: 100% !important;
  top: auto !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  border-top: solid 3px $color--accent-1;
  box-shadow: 0px 2px 25px 0px rgba(0,0,0,0.33);

  @include mq('tablet-and-up') {
    max-width: 480px;
    left: auto !important;
    right: 0 !important;
  }

  .fancybox-inner {
    width: 100% !important;
    overflow: hidden !important;
  }

  .fancybox-close {
    display: none;
  }

  .fancybox-skin {
    background-color: $color--primary-1;
  } 
  p {
    margin-bottom: 0;
    color: $color--white;
    text-align: center;
  }
}

#subscribe--close {
  position: absolute;
  top: 15px;
  right: 15px;
  cursor: pointer;

  svg {
    width: 24px;
    height: 24px;

    @include mq('tablet-and-up') {
      width: 35px;
      height: 35px;
    }

    * {
      fill: $color--white;
    }
  }

  &:hover svg * {
    fill: $color--accent-1;
  }
}

#subscribe--popup {
  padding: 35px 35px 20px;
  position: relative;

  @include mq('tablet-and-up') {
    padding: 45px 45px 30px;
  }

  h3 {
    margin-bottom: 12px;
    color: $color--white;
    @include fontDim(22px,28px,.2em);
    font-weight: $font-weight--black;
    text-align: center;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      max-width: 300px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  // form

  form {
    @include flexbox;
    @include justify-content(space-between);
    position: relative;
    margin-top: 20px;
    margin-bottom: 12px;
    background: $color--white; 
    border: solid 1px transparent;
    transition: border .3s ease;
  }
  form.has-error {
    border: solid 1px $color--error;
  }
  input[type="email"] {
    box-sizing: border-box;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 47px;
    margin-bottom: 0;
    padding: 15px 68px 15px 15px;
    border: none;
    border-radius: none;
    color: $color--gray-2;
    @include fontSize(14px);
    letter-spacing: .025em;
    text-align: left;
    line-height: 14px;

    @include mq('tablet-and-up') {
      height: 46px;
      padding: 20px 68px 20px 20px;
      @include fontSize(16px);
      line-height: 16px;
    }

    &:focus {
      color: $color--dark-gray;
    }
  }
  form.has-error input[type="email"] {
    color: $color--error;
  }
  #subscribe--popup--button {
    position: absolute;
    z-index: 2;
    @include flexbox;
    @include justify-content(center);
    @include align-items(center);
    top: 0;
    right: 0;
    width: 47px;
    height: 47px;
    cursor: pointer;

    @include mq('tablet-and-up') {
      width: 46px;
      height: 46px;
    }

    svg {
      width: 9px;
      height: 9px;

      @include mq('tablet-and-up') {
        width: 12px;
        height: 12px;
      }
    }

    &:hover {
      svg * {
        fill: $color--accent-2;
      }
    }
  }
  input[type="submit"] {
    display: none;
  }

  // response messages

  #subscribe--popup--form-response {
    color: $color--white;
    text-align: center;

    #subscribe--popup--error-response {
      @include h7;
      margin-bottom: 12px;
    }  
    #subscribe--popup--success-response {
      text-transform: none;

      p {
        color: inherit;
        @include fontSize(16px);
      }
    }
  }

  .fine-print {
    width: 80%;
    margin-left: auto;
    margin-right: auto;

    p {
      @include fontDim(9px,16px,.04em);
    }
    a {
      color: $color--white;
      font-weight: $font-weight--bold;
      text-decoration: underline;

      &:hover {
        color: $color--accent-1;
      }
    }
  }
}
