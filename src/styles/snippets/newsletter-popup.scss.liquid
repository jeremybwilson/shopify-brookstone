#subscribe--popup-wrapper {
  position: fixed !important;
  width: 100% !important;
  top: auto !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  border-top: solid 3px $color--accent-1;
  box-shadow: 0px 2px 25px 0px rgba(0,0,0,0.33);

  @include mq('tablet-and-up') {
    max-width: 480px;
    left: auto !important;
    right: 0 !important;
  }

  .fancybox-inner {
    width: 100% !important;
    overflow: hidden !important;
  }

  .fancybox-close {
    display: none;
  }

  .fancybox-skin {
    background-color: $color--primary-1;
  } 
  p {
    margin-bottom: 0;
    color: $color--white;
    text-align: center;
  }
}

#subscribe--close {
  position: absolute;
  top: 15px;
  right: 15px;
  cursor: pointer;

  svg {
    width: 24px;
    height: 24px;

    @include mq('tablet-and-up') {
      width: 35px;
      height: 35px;
    }

    * {
      fill: $color--white;
    }
  }

  &:hover svg * {
    fill: $color--accent-1;
  }
}

#subscribe--popup {
  padding: 35px 35px 20px;
  position: relative;

  @include mq('tablet-and-up') {
    padding: 45px 45px 30px;
  }

  h3 {
    margin-bottom: 12px;
    color: $color--white;
    @include fontDim(22px,28px,.2em);
    font-weight: $font-weight--black;
    text-align: center;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      max-width: 300px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  // form

  form {
    @include flexbox;
    @include justify-content(space-between);
    position: relative;
    margin-top: 20px;
    margin-bottom: 12px;
    background: $color--white; 
    border: solid 1px transparent;
    transition: border .3s ease;
  }
  form.has-error {
    border: solid 1px $color--error;
  }
  input[type="email"] {
    box-sizing: border-box;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 47px;
    margin-bottom: 0;
    padding: 15px 68px 15px 15px;
    border: none;
    border-radius: none;
    color: $color--gray-2;
    @include fontSize(14px);
    letter-spacing: .025em;
    text-align: left;
    line-height: 14px;

    @include mq('tablet-and-up') {
      height: 46px;
      padding: 20px 68px 20px 20px;
      @include fontSize(16px);
      line-height: 16px;
    }

    &:focus {
      color: $color--dark-gray;
    }
  }
  form.has-error input[type="email"] {
    color: $color--error;
  }
  #subscribe--popup--button {
    position: absolute;
    z-index: 2;
    @include flexbox;
    @include justify-content(center);
    @include align-items(center);
    top: 0;
    right: 0;
    width: 47px;
    height: 47px;
    cursor: pointer;

    @include mq('tablet-and-up') {
      width: 46px;
      height: 46px;
    }

    svg {
      width: 9px;
      height: 9px;

      @include mq('tablet-and-up') {
        width: 12px;
        height: 12px;
      }
    }

    &:hover {
      svg * {
        fill: $color--accent-2;
      }
    }
  }
  input[type="submit"] {
    display: none;
  }

  // response messages

  #subscribe--popup--form-response {
    color: $color--white;
    text-align: center;

    #subscribe--popup--error-response {
      @include h7;
      margin-bottom: 12px;
    }  
    #subscribe--popup--success-response {
      text-transform: none;

      p {
        color: inherit;
        @include fontSize(16px);
      }
    }
  }

  .fine-print {
    width: 80%;
    margin-left: auto;
    margin-right: auto;

    p {
      @include fontDim(9px,16px,.04em);
    }
    a {
      color: $color--white;
      font-weight: $font-weight--bold;
      text-decoration: underline;

      &:hover {
        color: $color--accent-1;
      }
    }
  }
}

.subscribe-modal {
  display: none;
  text-align: center;
  max-width: 100%;
  position: fixed;
  top: 0;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
  &.show-popup{
    @include flexbox;
  }
  .subscribe--popup--form-error{
    color: $light-red;
    line-height: 12px;
  }
  .page-center-modal {
      padding: 50px 65px;
      background-color:$color--white;
      max-width: 530px;
      max-height: calc(100vh - 40px);
      overflow: auto;
      position: relative;

      @include mq('phone-portrait'){
        margin: 0 15px;
        padding: 35px 35px;
      }
  }

  .close {
      background-image: url(https://cdn.shopify.com/s/files/1/0262/2226/4423/files/close.png?v=1579859086);
      width: 22px;
      height: 22px;
      background-size: 22px;
      background-repeat: no-repeat;
      background-position: center;
      position: absolute;
      top: 8px;
      cursor: pointer;
      right: 12px;
  }

  .modal-content {
    h3 {
      color:$light-red;
      @include fontSize(24px);
      font-weight: $font-weight--book;
      margin-bottom: 22px;
      font-family: "bodoni-svtytwo-itc-tt-book";
      text-transform: uppercase;
      letter-spacing: 2px;  
    }

    form#newsletter--popup--form {
      max-width:305px;
      margin: 0px auto;

      input {
        width: 100%;
        border-radius: 0px;
        text-align: center;
        height: 50px;
        padding: 0 15px;
        font-family: "BrandonGrotesque-Regular";
        @include fontSize(16px);
        letter-spacing: 0.5px;
        border-color:$color--gray-5;
      }
    }

    #footer-newsletter-submit-popup {
      margin-top:19px;
      background-color:$light-red;
      text-transform: capitalize;
      letter-spacing: 2px !important;
      font-weight: $font-weight--medium;
      font-size:18px !important;
      border:0px;
    }

    .copyright-popup{
      p {
        @include fontSize(12px);
        letter-spacing: 0.2px;
        color:$color--gray-2;
        line-height: 15px;
        margin-top: 27px;
        font-family: "BrandonGrotesque-Regular";

        a{
          text-decoration: underline;
        }
      }
    }
  }

  .discount-offer{
    >span:first-child {
      letter-spacing: 1px;
    }

    .discount {
      @include fontSize(60px);
      font-family: "bodoni-svtytwo-itc-tt-book";
      font-weight: $font-weight--medium;
      text-transform: uppercase;
      letter-spacing: -1px;
      line-height: 53px;

      @include mq('phone-portrait'){
        @include fontSize(48px);
      }
    }

    .appaly-link {
      width: 100%;
      @include fontSize(12px);
      max-width: 100%;
      border-bottom: 1px solid $color--gray-5;
      padding: 0 0 15px 0;
      margin-bottom: 19px;
      text-transform: capitalize;
      position: relative;
      top: -3px;
      letter-spacing: 0.5px;
    }

    span {
      @include fontSize(14px);
      font-weight: $font-weight--book;
      max-width: 66%;
      display: inline-block;
      line-height: 21px;
      text-transform: uppercase;
      font-family: "BrandonGrotesque-Regular";
      letter-spacing: 1px;

      @include mq('phone-portrait'){
        max-width:100%;
      }
    }
  }
}