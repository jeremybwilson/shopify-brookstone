#mobile_drawer{
  position: fixed;
  top:0;
  bottom:0;
  width:400px;
  left:0;
  @include transform(translateX(-100%));
  overflow: auto;
  z-index: 1199; 
  background:#fff;
  @include transition(0.35s cubic-bezier(0.46, 0.01, 0.32, 1));
  @include mq ( phone ){
    width:100%;
    left:0;
  }
  &.active{
    @include transform(translateX(0%));
  }
  .simply_currency{
    .current{
      border:none;
      padding: 19px 15px;
      border-bottom:1px solid #ddd;
    }
    ul.list{
      border: none;
      border-bottom: 1px solid #ddd;
      padding: 0;
      >li{
        padding: 15px 15px;
        border-bottom: 1px dotted #eee;
      }
    }
  }
  .menu_title{
    line-height:1;
    margin-bottom:0;
    text-align:left;
    padding:0 15px;
    margin-top: 15px;
    position:relative;
    font-size:13px;
    text-transform:uppercase;
    color: #999;
    .drawer_close{
      position:absolute;
      line-height:1;
      cursor: pointer;
      min-width: 30px;
      right:15px;
      top:50%;
      text-align: right;
      font-size: 28px;
      font-weight: bold;
      @include transform(translateY(-50%));
    }
  }
  ul.nav{
    li{
      display: block;
      text-align: left;
      cursor: pointer;
      position:relative;
      .link{
        text-decoration: none;
        display:block;

        border-bottom:1px solid #ddd;
        &:after{
          clear:both;
          display:table;
          content:'';
        }
        >a{
          display:block;
          width:90%;
          padding: 15px 0 15px 15px;
          float:left;
        }
        .icon_wrap{
          width:10%;
          padding:15px 0;
          font-size: 16px;
          float:left;
          text-align:center;
        }
      }
      .child_menu,.link_data{
        display:none;
        -webkit-backface-visibility: hidden;
        -moz-backface-visibility: hidden;
        -ms-backface-visibility: hidden;
        -o-backface-visibility: hidden;
        backface-visibility: hidden;
        .link{
          padding-left: 15px;
        }
        &.third_menu{
          li{
            .link a{
              padding-left:30px;
            }
          }
        }
        ul{
          li{
            .link{
              a{
                padding-left:15px;
              }
            }
          }
        }
      }
    }
  }
}