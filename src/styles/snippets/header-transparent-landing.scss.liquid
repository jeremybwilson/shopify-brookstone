// HEADER-TRANSPARENT-LANDING.SCSS
// Note : this file is imported into header.scss directly as it needed to nest in various media queries cleanly


/*  TRANSPARENT LANDING : Core Styles
 * ---------------------------------------------- */
#nav-bar-wrapper {

    &.transparent-landing {
        // margin-bottom: -81px;
        position: absolute;
        background: rgba( 0,0,0,0 );

        #nav-bar-bg,
        #nav-user ul#nav-user-list .nav-sites ul.sites-picker,
        #nav-user ul#nav-user-list .nav-sites ul.sites-picker li,
        #nav-user ul#nav-user-list .nav-sites ul.sites-picker li .site-name {
            background: rgba( 0, 0, 0, 0 );
            transition: $navShadowAni;
        }

        // Easier to bundle it as an important'd override, then override again elow this in the isStuck block
        .nav-category-header,
        .account-text,
        .icon-cart-text,
        .cart-count,
        .site-name,
        .nav-item svg path,
        .icon-header-logo path {
            color: $transparentLandingFontColor !important; 
            fill: $transparentLandingFontColor !important;
            transition: all 0.25s ease-in-out;
        }
        .nav-wishlist {
            svg path {
                stroke: $transparentLandingFontColor !important;
            }

            .wk-filled svg path {
                fill: $transparentLandingFontColor !important;
                fill-opacity: 1;
            }
        }

        .icon-nav-mobile-menu .bar {
            background: $transparentLandingFontColor !important;
        }


        // SCROLL : Sticky nav state fill in
        @import url('../snippets/header-sticky-shading.scss.liquid'); //Layer this before the transparent landing overrides
    }
}
