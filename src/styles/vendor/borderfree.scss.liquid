#bfx-wm-wrapper {
  font-family: $font-stack--default;
  font-weight: $font-weight--medium;

  & #bfx-wm-content {
    background: #fff;
    background-image: none;

    & #bfx-wm-head {
      background: #fff;
    }

    & #bfx-wm-body {
      background-image: none;
      background: #fff;

      & #bfx-wm-title {
        background-image: none;
      }

      & #bfx-wm-continue-button-wrapper {
        padding-top: 20px;
        
        & #bfx-wm-continue-button {
          background-image: none;
          background: #000;
          color: #fff;
          font-family: $font-stack--default;
          font-weight: $font-weight--medium;
          text-transform: uppercase;
        }
      }

      & #bfx-wm-promo {
        background-color: #fff;
        border: none;
      }
    }

    & #bfx-wm-foot {
      background: #fff;
    }
  }
}

#bfx-cc-wrapper-collapsed {
  display: none;
}

[data-borderfree-hidden] {
  opacity: 0;
  visibility: hidden;
  display: none;
}

.bfx-active {
  & .additional-checkout-button {
    visibility: hidden !important;
  }
  & .bfx-price {
    visibility: hidden;
  }

  & .ls-item-price {
    visibility: hidden;
  }

  & .site-header__account {
    visibility: hidden;
  }

  & .site-header__icons--plus {
    & .site-header__search {
      padding-right: 33px;
    }
  }

  & .bfx-minicart-container {
    & a[href="/cart"] {
      margin: 0;
      display: block;
    }

    & a[href="/checkout"] {
      display: none;
    }
  }
}

.bfx-price[data-bfx] {
  visibility: visible !important;
}
