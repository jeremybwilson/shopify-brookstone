@charset "UTF-8";

#contact-muck {
  td {
    vertical-align: top;
  }
  h4 {
      margin-bottom: 15px;
  }
  h5 {
    margin: 10px 0;
  }
  table h5 {
    margin-top: 0;
    @include fontSize(17px);
    color: $color--primary-1;
    text-transform: capitalize;

    @include mq( 'tablet-and-up' ) {
      @include fontSize(22px);
    }
  }
  h6 {
    color: $color--primary-1;
    @include fontSize(14px);

    @include mq( 'tablet-and-up' ) {
      @include fontSize(16px);
    }
  }
  p {
    margin-bottom: 0;
  }
  h5 ~ p {
    color: $color--primary-2;
    font-weight: $font-weight--black;
  }
  h6 ~ p {
    margin-bottom: 20px;
  }
  hr {
    margin: 25px 0;

    @include mq( 'tablet-and-up' ) {
      margin: 40px 0;
    }
  }
  br {
    @include mq( 'phone' ) {
      display: none;
    }
    @include mq( 'tablet' ) {
      display: none;
    }    
  }
  table {
    
    td {
      float: left;
      border: none;
      vertical-align: top;
      padding: 0;

      @include mq( 'phone' ) {
        float: left;
        width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
        border-left: none !important;
        height: auto !important;
      }
    }
  }

  .page-content-field {
    a {
      font-weight: 700;
    }
  }

}

#muck-form {
  margin: 0 -28px 20px;
  background-color: $color--light-gray;

  @include mq( 'tablet-and-up' ) {
    float: right;
    width: 100%;
    margin: 15px 0 50px;
  }

  h3 {
    font-weight: $font-weight--black;
    @include fontSize(17px);
    color: $color--primary-1;
    text-transform: capitalize;
    margin: 25px 0 0;

    @include mq( 'tablet-and-up' ) {
      @include fontSize(22px);
    }
  }
  
  form {
    width: 80%;
    margin: 0 auto;
    padding: 15px 0;
      
    @include mq('tablet-and-up') {
      width: 90%;
      padding: 50px;
    }
    label {
      margin-bottom: 5px;
      color: $color--primary-2;
      font-weight: $font-weight--bold;
      @include fontSize(14px);

      @include mq( 'tablet-and-up' ) {
        @include fontSize(16px);
      }

      .req {
        color: $color--primary-1;
        font-size: 19px;
      }
    }
    input {
      background: $color--white;
      border-radius: 0;
    }
    input::placeholder { 
      color: transparent;
      opacity: 0;
    }
    textarea {
      background-color: $color--white;
      border-radius: 0;
    }
    textarea::-webkit-input-placeholder { 
      color: transparent;
    }
    p.form-phone {
      display: none;
    }
    p.form-name,
    p.form-email {
      display: inline-block;
      width: 100%;

      @include mq('tablet-and-up') {
        width: 49%;
      }
    }
    p.form-email {
      margin-left: 1%;
    }
    p.form-submit {
      text-align: center;
    }
    input[type="submit"] {
      width: 200px;
      background-color: $color--primary-1;
    }
    .successForm p {
      color: $color--primary-2;
      border: 1px solid $color--primary-2;
      padding: 5px 20px;
    }
  }
}

#honeywell-updates {
  float: left;
  width: 100%;

  h5 {
    color: $color--primary-1;
    @include fontSize(17px);

    @include mq( 'tablet-and-up' ) {
      @include fontSize(22px);
    }
  }
  div {
    float: left;
    padding-right: 25px;
    // white-space: nowrap;

    @include mq( 'phone' ) {
      width: 100%;
      margin: 15px 0;
    }
  }
  a {
    display: inline-block;
    color:$color--primary-2 !important;
    text-transform: uppercase;
    letter-spacing: .1em;
  }
  svg {
    display: inline-block;
    width: 10px;
    height: 10px;
    transition: transform .25s ease;
    transform: rotate(-90deg);
    
    * {
      fill: $color--accent-1;
    }
  }
}