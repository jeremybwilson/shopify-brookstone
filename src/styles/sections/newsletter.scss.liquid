@charset "UTF-8";

#shopify-section-newsletter {
  margin-bottom: 0 !important;
}

#newsletter-social {
  @include flexbox;
  @include flex-direction(column);

  @include mq('phone') {
    line-height: initial !important; //*  
  }
  @include mq('tablet-and-up') {
  	@include flex-direction(row);
  }
}

// newsletter

.newsletter-wrapper {
  background: {{ settings.newsletter_footer_background }};
  text-align: center;
  padding: 0;

  @include mq('tablet-and-up') {
    width: 100%;
    height: 48px;
    padding: 0;
  }
  .newsletter-inner {
    width: auto;
    margin: 0 auto;
    margin-top: 7px;
    display: inline-flex;
  }
  header {
    padding-top: 0;
    background: transparent;
  }

  // heading
  
  h2 {
    margin-bottom: 10px;
    color: {{ settings.newsletter_footer_text }};
    @include fontDim(16px,24px,0);
    font-weight: $font-weight--black;

    @include mq('tablet-and-up') {
      margin-bottom: 4px;
      @include fontSize(18px);
      
    }
  }

  .newsletter-heading{
    display: inline-block;
    padding-right: 2px;
    padding-top: 4px;
  }

  .newsletter-subheading {
    margin-bottom: 15px;
    color: {{ settings.newsletter_footer_text }};
    @include fontDim(14px,22px,0);
  	font-weight: $font-weight--black;
    text-transform: none;

    @include mq('tablet-and-up') {
      margin-bottom: 16px;
      @include fontSize(16px);
    }
    p {
      color: inherit;
      margin-bottom: 0;
      font-size: inherit;
    }
  }
  form {
    @include flexbox;
    @include justify-content(space-between);
    border: solid 1px transparent;
    transition: border .3s ease;
  }

  form.has-error {
    border: solid 1px $color--error;
  }
  input[type="email"] {
    padding: 7px 12px;
    height: auto;
    line-height: 1;
    display: inline-block;
    background: $color--white;
    border-radius: 0;
    vertical-align: middle;
    box-sizing: border-box;
    width: 222px;
    font-style: italic;
    margin-bottom: 0;
    margin-top: 0;
    border: none;
    color: $color--gray-2;
    font-weight: $font-weight--book;
    @include fontSize(14px);
    text-align: left;

    @include mq('tablet-and-up') {
      padding: 7px 12px;
      @include fontSize(14px);
    }

    &:focus {
      color: $color--dark-gray;
    }
  }
  form.has-error input[type="email"] {
    color: $color--error;
  }

  input[type="submit"] {
    height: auto;
    width: auto;
    margin: 0;
    display: inline-block;
    padding: 8px 12px;
    line-height: 1;
    text-align: center;
    vertical-align: middle;
    background-color: $color--submit-button;
    @include fontSize(14px);
    font-weight: $font-weight--book;
    letter-spacing: 0;
  }

  // response messages

  #newsletter-form--response {
    color: $color--white;

    #newsletter-error-response {
      @include h7;
    }  
    #newsletter-success-response {
      text-transform: none;

      p {
        color: inherit;
        @include fontSize(16px);
      }
    }
  }
}