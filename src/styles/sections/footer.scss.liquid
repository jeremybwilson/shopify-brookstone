@charset "UTF-8";

// actual footer

.site-footer {
  background: {{ settings.footer_background }};
  padding: 0 0 39px;

  @include mq('tablet-and-up') {
    padding: 4px 40px 39px;
  }

  // repeating elements

  .row {
    width: 100%;

    @include mq('tablet-and-up') {
      @include flexbox;
      @include flex-direction(row);
      @include justify-content(space-between);
      @include align-items(center);
      max-width: 1250px;
      margin-bottom: 30px;

    }
  }
  h4 {
    color: $color--footer-text;
    border-bottom: none;
    text-transform: uppercase;
  }
  img,
  svg {
    width: auto;
    margin: 0 6px;

    @include mq('tablet-and-up') {
      margin: 0 8px;
    }
  }
}

.footer-blocks {
  width: 100%;
}

// SINGLE BLOCKS : Individual menu blocks (should only need one with nesting support, but left as an option)
.footer-nav {
  width: 100%;
  padding: 50px 45px 46px;
  border-bottom: solid 1px $color--accent-1;

  @include mq('tablet-and-up') {
    width: 100%;
    padding: 0;
    border-bottom: none;
  }

  .section-title {
    display: none;
  }

  nav {
    background: transparent;
    font-family: $font-stack--default;
    @include fontSize(14px);
    line-height: 0.30;
    text-align: left;

    @include mq('tablet-and-up') {
      @include fontSize(16px);
    }

    ul {
      @include mq('phone') {
        @include flexbox;
        @include flex-direction(column);
        @include justify-content(flex-start);
        @include align-items(flex-start);
        margin-bottom: 0;

        li {
          position: relative;
          width: 220px;
          left: 50%;
          transform: translateX( -50% );
        }

        // NESTED : Spacing for Nested Nav Sets when headers are turned on
        .footer-sub-nav-wrapper:not( :first-child ) {
          .nav-sub-header {
            margin-top: 25px;
          }
        }
      }

      @include mq('tablet-and-up') {
        display: block;

        .footer-sub-nav-wrapper {
          position: relative;
          width: 33%;
          display: inline-flex;
          padding-top: 25px;
          font-weight: $font-weight--book;
          @include fontSize(12px);
        } 

        h4.nav-sub-header {
          position: absolute;
          top: 0;
          left: 0;
          @include fontSize(14px);
        }

        &.footer-sub-nav {
          columns: 1;
        }
      }
    }

    a {
      display: block;
      padding: 7px 12px 7px 0;
      color: $color--footer-text;

      @include mq('tablet-and-up') {
        display: inline-block;
        padding: 9.5px 12px 9.5px 0;
      }
      @include mq('lap-and-up') {
        padding: 9.5px 0;
      }
    }      
  }
}

.visit-our-brands {
  margin-left: 10px;
  padding: 45px 20px 33px;

  @include mq('tablet-and-up') {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);    
    @include align-items(center);
    margin: 21px -18px 0 auto;
    padding: 0;
  }
  #card-desc {
    @include fontSize(12px);
    color: $color--text-1;
  }
  .section-title {
    display: inline-block;
    margin-bottom: 16px;
    margin-left: 10px;
    width: 350px; 
    font-weight: $font-weight--book;
    @include fontSize(24px);
    @include mq('tablet-and-up') {
      margin-bottom: 18px;
    }
  }
  #gift-card-text {
    display: inline-block;
    vertical-align: top;
    margin-left: 20px;
    margin-top: 15px;
  }
  #git-card-img {
    display: inline-block;
    margin-top: 15px;
  }
  #card-link {
      @include fontSize(14px);
      text-transform: uppercase;
      text-decoration: underline;
      font-weight: $font-weight--bold;
      color: $color--text-1;
    }

  .section-title h4 {
    @include fontSize(14px);
    letter-spacing: .3em;

    @include mq('tablet-and-up') {
      @include fontSize(16px);
      letter-spacing: .25em;
    }
  }
  .brands--list {
    @include flexbox;
    @include justify-content(center);
    @include align-items(center);
  }
  img {
    width: 100px;
    margin: 0;
    @include mq('tablet-and-up') {
      width: 100px;
      margin: 0;
    }
  }
  #footer-gift-card-text-2 {
    font-weight: $font-weight--bold;
    margin-bottom: 15px;
  }

  #footer-gift-card-text-1 {
    font-weight: $font-weight--book;
  }
}
.row.footer--bottom-row {
  @include mq('tablet-and-up') {
    @include flex-direction(column);
    margin-bottom: 0;
    text-align: center;
    border-top: solid 1px {{ settings.footer_border }};   
  }
  @include mq('lap-and-up') {
    @include flex-direction(row);
    @include flex-wrap(wrap);
  }

  .contact-number {
    margin-left: auto;
    margin-right: auto;

    .font-normal {
      display: inline-block;
      width: 100%;
      font-weight: $font-weight--book;
      color: $color--text-1;
      @include fontSize(12px);
    }

    .contact-number-bold {
      font-weight: $font-weight--bold;
      color: $color--text-1;
    }
  }
  .footer-description {
     font-weight: $font-weight--book;
     letter-spacing: 0;
     line-height: 1.5;
     width: 100%;
  }

  .footer-description>p {
     color: $color--footer-text;
     display: inline-block;
     @include fontSize(12px);
  }
  .footer-description>a {
    text-decoration: underline;
  }
}

.footer-contact-us-bar {
    display: block;
    width: 100%;
    background-color: $color--white;
    text-align: center;
    padding: 21px 10px;

    .bottom-contact-bar {
      margin-top: 10px;
      @include fontSize(14px);
      text-transform: uppercase;

      a {
        color: $color--footer-text;
      }
      a:hover {
        color: $color--footer-contact-us;
      }
    }
  }

// social

.social-wrapper {
  padding: 8px 50px;
  background: {{ settings.social_footer_background }};
  text-align: center;
  width: 100%;
  margin-left: auto;
  margin-right: auto;

  @include mq('tablet-and-up') {
    @include flexbox;
    @include flex-direction(row);
    @include align-items(center);
    @include justify-content(center);
  }

  .social-inner {
    @include flexbox;
    @include flex-direction(column);
    margin: 0 auto;

    @include mq('tablet-and-up') {
      @include flex-direction(row);
      @include align-items(center);
      @include justify-content(center);
    }
  }
  .section-title {
    margin-bottom: 0;
    color: {{ settings.social_footer_header }};
    @include fontDim(14px,14px,.2em);
    font-weight: $font-weight--black;
    text-transform: uppercase;
                                                    
    @include mq('tablet-and-up') {
      @include fontDim(20px,20px,.04em);
    }
  } 
  ul#social-icons {
    margin-top: 16px;
    text-align: center;

    @include mq('tablet-and-up') {
      @include flexbox;
      @include justify-content(center);
      @include align-items(center);
      margin-top: 0;
      margin-left: 24px;
    }
    li {
      display: inline-block;
      padding: 0;
    }
    a {
      position: relative;
      top: 2px;
      color: {{ settings.icons }};
      display: inline-block;
      img{
        width: 100%;
        max-width: 40px;
        height: auto;
        padding: 0;
      }
      svg {
        width: 22px;
        height: 22px;

        @include mq('tablet-and-up') {
          width: 20px;
          height: 20px;
          padding: 0;
        }

        * {
          fill: {{ settings.icons }};
        }
      }

      &:hover {
        svg * {
          fill: {{ settings.icons_hover }};
        }
      }
    }
  }
}