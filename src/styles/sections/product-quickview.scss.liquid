/*  QUICKVIEW : Core Styles
 * ---------------------------------------------- */

.fancybox-quickview {
	// Fancybox sucks at its job, it manually sets things when the box isn't fully loaded, slow devices will destroy this without hard sets. 
	position: fixed !important;
	width: 960px !important;
	top: 50% !important;
	left: 50% !important;
	transform: translate( -50%, -50% );
	display: none;

	+ .fancybox-overlay {
		display: none;
	}

	.fancybox-inner {
		max-width: 960px;
		width: 100% !important;
	}


	@include mq( 'lap-and-up' ){
		display: block;

		+ .fancybox-overlay {
			display: block;
		}
	}
}

#product-quick-view {
	padding: 40px 40px 40px 20px;
	margin: 0;
	overflow-x: hidden;
	overflow-y: auto;
	width: 100%;

	#shopify-section-product-template {
		margin-top: 0;

		.product-details--top {
			width: 100%;
			margin: 0;
			padding: 20px 0 40px;
		}


		// IMAGES : LEFT SIDE : Left side of UI modal that holds image viewer
		#product-photos {
			max-height: 470px;
			width: 500px;

			.react-badge {
				position: absolute;
				right: 0;
				top: 50px;
			}

			.product-main-images {
				position: relative;
				top: 50px;
			}

			#thumbnail-gallery {
				.bx-viewport {
					height: 311px !important; // fancybox is an inline style nazi...
				}
			}
		}

		// DESCRIPTION : RIGHT SIDE : Right side of UI that houses product info and cart buttons
		#product-right {
			max-width: 301px; // 46px * 6 Size squares with 5px * 5 right margins (last doesn't have one)
			margin-top: 20px;

			#product-description {
				width: 100%;
				padding: 0;
				border: none;

				h1 {
					@include h6;
					@include fontSize( 26px );
					font-weight: $font-weight--black;
					color: $color--primary-1;
				    text-transform: uppercase;
					letter-spacing: 0.2em; //Matches mock, seems big but what they approved lol
				}

				.desc {
					border: none;
					padding: 0;
					margin: 0;
				}

				// SIZE SQUARES : Needed so it sits flush on right edge, 
				// lots of important tags in stylesheet.css so don't wanna hurt anything potentially on PDP
				#AddToCartForm {
					.swatch.size {
						width: calc( 100% + 5px ); // 100% + 5 so we can cheat the right margin to account for long and short size tags ("Youth 6" vs "5.5")

						// Size : "5" or "5.5"
						.swatch-element.short-label label {
							width: 46px; //So half sizes = whole size boxes
						}

						// Size : "Youth 6" or "Wide 6"
						.swatch-element.long-label label {
							width: 97px; //So half sizes = whole size boxes
						}
					}
				}

				// "View Full Details" Link
				a.full-click {
					@include h7;
					@include fontSize( 16px );
					color: $color--primary-1;
					text-decoration: underline;
					transition: color 0.25s ease-in-out;

					&:hover {
						color: $color--accent-1;
					}
				}
			}
		}
	}
}