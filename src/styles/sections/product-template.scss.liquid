/* Free Shipping
 * ---------------------------------------------- */

#free-shipping--accordion {
  @include flexbox;
  @include flex-direction(column);
  width: 100%;
  margin-bottom: 40px;

  // header & accordion trigger

  dt {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
    cursor: pointer;

    & > svg {
      width: 21px;
      height: 21px;
      margin-right: 5px;

      @include mq('tablet-and-up') {
        width: 36px;
        height: 36px;
        margin-right: 12px;
      }

      * {
        fill: $color--primary-1;
      }
    }
    h3 {
      margin-top: 3px;
      color: $color--primary-1;
      @include fontDim(14px,14px,0);
      font-weight: $font-weight--black;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        margin-top: 5px;
        @include fontDim(16px,16px,0);
      }
    }
    .opener {
      margin-left: auto;

      svg {
        width: 10px;
        height: 10px;
        transition: transform .25s ease;
        transform-origin: center;

        * {
          fill: $color--accent-1;
        }
      }
    }
  }
  dt.open {
    .opener svg {
      transform: rotate(180deg);
    }
  }

  // content

  dd {
    display: none;
    margin-top: 16px;
    padding-right: 10px;

    @include mq('tablet-and-up') {
      padding-right: 24px;
    }
    p {
      @include fontDim(16px,25px,.025em);
    }
  }
}

/* Big Green Product Description Area
 * ---------------------------------------------- */

.product-description--area {
    padding: 15px 50px;
    .row {
        @include flexbox;
        @include flex-direction(column);
        max-width: 1200px;

        @include mq('phone') {
            padding-left: 30px;
            padding-right: 30px;
        }

        @include mq('tablet-and-up') {
            @include flex-direction(row);
            @include flex-wrap(wrap);
            @include justify-content(space-between);
        }
    }
    .tabs-wrapper{
        .tabs{
            ul.tab-header{
                border-bottom: 1px solid $color--dark-gray;
                list-style: none;
                .tab-li{
                    display: inline-block;
                    .tab-item{
                        display: inline-block;
                        padding: 0 30px;
                        @include fontSize(14px);
                        .caret-icon{
                            vertical-align: middle;
                            padding-left: 5px;
                            svg{
                                height: 13px;
                                width: 13px;
                            }
                        }
                    }
                    &:after{
                        content: "|" ;
                    }
                }
            }
        }
    }
    .tab-description-wrapper{
        margin-top: 60px;
        .tab-content{
            border-top: 1px solid $color--dark-gray;

            .inner-content{
                padding: 25px 35px;

                .toggle-icon{
                    display: none;
                    vertical-align: middle;
                    background: $color--gray-5;
                    color: $color--white;
                    font-weight: $font-weight--bold;
                    @include fontSize(18px);
                    border-radius: 50%;
                    position: relative;
                    height: 20px;
                    width: 20px;
                    vertical-align: middle;
                    line-height: 20px;
                    text-align: center;

                    &.active{
                        display: inline-block;
                    }
                }
                .tab-title{
                    display: inline-block;
                    padding-left: 8px;
                    margin-bottom: 0;
                    vertical-align: middle;
                    color: $color--footer-text;
                }
                .toggle-content{
                    padding-left: 35px;
                    display: none;
                    &.active{
                        display: block;
                    }
                }
            }
        }
    }

  // Paragraph

  .rte, .rte p {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(14px,24px,0em);
    text-align: center;

    @include mq('tablet-and-up') {
      @include fontDim(16px,30px,0);
      text-align: left;
    }
  }

}
.product-description--left {
  @include mq('tablet-and-up') {
    width: 720 / 1200 * 100%;
    padding-left: 120 / 1200 * 100%;
    padding-right: 120 / 1200 * 100%;
  }

  .rte > ul,
  .rte li {
    display: none;
  }
  .product-description--icons {
    @include mq('phone') {
      display: none;
    }
  }
}
.product-description--icons {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  @include align-items(flex-start);
  margin: 15px -10px; // neg margins to accommodate item padding

  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
    margin-top: 30px;
  }

  li {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    margin: 0 10px 20px;
    max-width: 80px;
    padding-left: 0;
    list-style: none;
    text-align: center;

    &:before {
      display: none;
    }
  }

  img {
    max-width: 54px;
    margin: 0 auto 12px;
  }
  span {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(13px,18px,.025em);
  }
}

#product-description--mobile-dropdown {
  @include mq('phone') {
    display: none;
  }
  @include mq('tablet-and-up') {
    width: 480 / 1200 * 100%;
  }
  .product-description--icons {
    @include mq('tablet-and-up') {
      display: none;
    }
  }
  .rte > p {
    display: none;
  }
}
#product-description--mobile-dropdown-trigger {
  width: 100%;
  padding: 20px;
  margin-top: 20px;
  margin-bottom: -20px;
  color: $color--primary-1;
  font-weight: $font-weight--black;
  @include fontDim(14px,14px,0);
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;

  @include mq('tablet-and-up') {
    display: none;
  }

  svg {
    width: 10px;
    height: 10px;
    margin-left: 20px;
    transition: transform .25s ease;
    transform-origin: center;

    * {
      fill: $color--accent-1;
    }
  }

  .open-text {
    display: none;
  }
  &.open {
    .closed-text {
      display: none;
    }
    .open-text {
      display: inline;
    }
    svg {
      transform: rotate(180deg);
    }
  }
}

