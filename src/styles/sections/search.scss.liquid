// SEARCH.SCSS
// -- templates/search.liquid


/*  SEARCH : Core Variables
 * ---------------------------------------------- */
$searchMobileGutter: 10px;
$searchBorder: 1px solid {{ settings.filter_divider_color }};


/*  GLOBAL : 
 *     - Items not in search.liquid that need adjustment
 * ----------------------------------------------------- */
body.search {
    // BREADCRUMB : "Home / SEARCH TERM" Looks funky, hiding for search page
    #breadcrumb {
        display: none;
    }

    #content {
        padding: 0 0 100px;
    }
    ul#sortme {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }
}



/* SEARCH: Page-specific styles for search.liquid
 * ------------------------------------------------- */ 
#search-template {
    position: relative;
    width: 100%;
    margin: 75px 0 0;
    float: none;
    @include mq( 'phone-and-tablet' ) {
        margin: 35px 0 0;
    }
    @include mq( 'lap-and-up' ) {
        margin-top: 50px;
    }


    /* TITLE + SEARCH BAR : Header content w/ search bar
     * ------------------------------------------------- */ 
    .search-title, 
    .bc-sf-search-result-number {
        @include h6;
        color: $color--primary-1;
        position: relative;
        left: $searchMobileGutter;
    }

    .search-title {
        @include fontSize( 20px );
    }

    #search-bar {
        position: relative;
        width: calc( 100% - ( #{$searchMobileGutter} * 2 ) );
        margin: 0 $searchMobileGutter;
        border: none;
        float: none;
        @include mq( 'tablet' ) {
            margin: 0px;
            width:100%;
        }
        @include mq( 'lap-and-up' ) {
            position: absolute;
            width: 320px;
            top: 0px;
            right: 0;
        }

        input#q {
            @include h7;
            width: 100%;
            border: none;
            font-weight: $font-weight--bold;
            color: $color--primary-1;
            border-bottom: $searchBorder; 
        }

        svg.icon.icon-search {
            width: 16px;
            position: absolute;
            right: 10px;
            top: 8px;
        }
    }


    /* COLLECTION : Product Grid + Item View
     * ------------------------------------------------- */  
    @import url('../snippets/product-grid.scss.liquid');
    


    /* FILTERS : Filter layout styles
     * ------------------------------------------------- */
    @import url('../snippets/filters.scss.liquid');



    /* LAYOUT : Overrides for filter / collection styles
     * ------------------------------------------------- */

     .filter-wrapper{
        #filter-list-mobile-wrap {
            position: relative;
            margin-top: -69px;
            @include mq( 'phone-and-tablet' ) {
                margin-top: unset;
                top: 0;
            }

            #filter-list-button-wrap{
                @include mq( 'phone-and-tablet' ) {
                    position: static;
                    width: 55%;
                    height: 35px;
                }
                #filter-button-mobile{

                    @include mq( 'phone-and-tablet' ) {
                        position: static;
                    }   
                }
            }
        }
     }
    .filter-wrap-desktop {
        @include mq( 'lap-and-up' ) {
            margin-top: 20px;
        }
        @include mq( 'phone-and-tablet' ) {
            display: none;
        }
    }

    #product-loop {
        padding-top:0px;
    }
}

/* New search Scss start */
body.template-name-search{
    #search-template{
        #collection-wrapper{
            padding:0px;
            #collection-filters{
                #full-width-filter{
                    margin-top:20px;
                    #bc-sf-filter-tree-h{
                        .bc-sf-filter-selection-wrapper{
                            position:static;
                            padding:0px;
                            .bc-sf-filter-selected-items{
                                padding:0px;
                                .selected-item{
                                    background:$color--light-gray;
                                    border-radius:0px;
                                    padding:5px 10px;
                                    margin-right:7px;
                                    .bc-sf-filter-option-label{
                                        text-transform:capitalize;
                                        font-weight: $font-weight--medium;
                                        @include fontSize( 14px );
                                    }
                                }
                            }
                            .bc-sf-filter-clear-all{
                                top:16px;
                                text-transform:capitalize;
                                font-weight: $font-weight--medium;
                            }
                        }
                        .bc-sf-filter-block-title{
                            padding-top:8px;
                            padding-bottom:8px;
                        }
                        .bc-sf-filter-block-content{
                            position:static;

                        }
                    }
                }
            }
            #product-loop{
                .product-info{
                    .product-title{
                        @include fontSize( 14px );
                        letter-spacing: 0px;
                        text-transform: capitalize;
                    }
                }
            }
            .select-collection{
                .collection-sort-wrap{
                    @include mq( 'phone' ) {
                        display:none;
                    }
                }
            }
        }
        #sortme{
            .styled-select{
                height: 35px;
                line-height: 18px;
            }
        }
    }
}
/* New search Scss End */