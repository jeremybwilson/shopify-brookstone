.cms-pages-sidebar-navigation{
	&.active{
		.cms-pages-sidebar-navbar-ul{
			display: block;
		}
		.customer-navigation-title{
			.arrow-up{
				display: block;
			}
			.arrow-down{
				display: none;
			}
		}
	}
	@include mq(phone){
		border: 1px solid #d5d5d5;
		border-radius: 5px;
		margin-bottom: 15px;
	}
	.customer-navigation-title{
		display: none;
		@include mq(phone){
			display: block;
			padding: 15px 10px;
			margin: 0;
			@include fontSize(14px);
			position: relative;
		}
		.arrow-up,
		.arrow-down{
			position: absolute;
			width: 100%;
			max-width: 20px;
			right: 10px;
			top: 10px;
		}
		.arrow-up{
			display: none;
		}
	}
	.cms-pages-sidebar-navbar-ul{
		@include mq(phone){
			display: none;
			padding: 0 15px 15px;
		}
		.cms-pages-sidebar-navbar-li{
			list-style: none;
			line-height: 30px;
			.cms-pages-sidebar-navbar-anchor{
				@include fontSize(16px);
				@include mq(phone){
					@include fontSize(14px);
				}
				&.active{
					font-weight: $font-weight--bold;
				}
			}
		}
	}
}