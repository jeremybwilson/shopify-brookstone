      },
      {
        "type":"header",
        "content":"Visit Our Brands - #1"
      },
   
      {
        "type":"url",
        "id":"visit_brand_link_one",
        "label":"URL"
      },
      {
        "type":"image_picker",
        "id":"visit_brand_image_one",
        "label":"Logo"
      },
      {
        "type":"header",
        "content":"Visit Our Brands - #2"
      },
      {
        "type":"url",
        "id":"visit_brand_link_two",
        "label":"URL"
      },
      {
        "type":"image_picker",
        "id":"visit_brand_image_two",
        "label":"Logo"
      },
      {
        "type":"header",
        "content":"Visit Our Brands - #3"
      },
      {
        "type":"url",
        "id":"visit_brand_link_three",
        "label":"URL"
      },
      {
        "type":"image_picker",
        "id":"visit_brand_image_three",
        "label":"Logo"
      },
      {
        "type":"header",
        "content":"Trust Icons"
      },
      {
        "type":"image_picker",
        "id":"trust_icon_image_one",
        "label":"Logo #1"
      },
      {
        "type":"image_picker",
        "id":"trust_icon_image_two",
        "label":"Logo #2"
      },
      {
        "type":"image_picker",
        "id":"trust_icon_image_three",
        "label":"Logo #3"
      },
      {
        "type":"richtext",
        "id":"footer_cust_contacts",
        "label":"Footer contact no."
      },
      {
        "type":"richtext",
        "id":"footer_desc_text",
        "label":"Footer description text"
      },
      {
        "type":"text",
        "id":"footer_copyright_text",
        "label":"Footer copyright text"
      }
    ],
    "blocks":[
      {
        "type":"link_list",
        "name":"Menu",
        "settings":[
          {
            "type":"link_list",
            "id":"menu_id",
            "label":"Footer Menu"
          },
          {
            "type":"checkbox",
            "id":"show_headings",
            "label":"Show Footer Menu Headers",
            "default":false,
            "info":"(Hidden by default)"
          }
        ]
      }
    ]
  }
