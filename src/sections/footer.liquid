    ],
    "blocks":[
      {
        "type":"link_list",
        "name":"Menu",
        "settings":[
          {
            "type": "link_list",
            "id": "menu_id",
            "label": "Footer Menu"
          },
          {
            "type": "checkbox",
            "id": "show_headings",
            "label": "Show Footer Menu Headers",
            "default": false,
            "info": "(Hidden by default)"
          }
        ]
      },
      {
        "type":"footer_content",
        "name":"Footer content",
        "settings":[
          {
            "type": "text",
            "id": "footer_desc_text",
            "label": "Footer description text"
          }
        ]
      }
    ]
  }
{% endschema %}
